{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strict": true,
    "target": "ES2019",
    "outDir": "./build-cli",
    "rootDir": "cli",
    "typeRoots": [
      "./ts-declarations",
      "./node_modules/@types"
    ]
  },
  "include": ["./cli"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
