{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strict": true,
    "target": "ES2019",
    "outDir": "./build-utils",
    "rootDir": "utils",
    "typeRoots": ["./ts-declarations", "./node_modules/@types"]
  },
  "include": ["./utils"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
