import React, { useState } from 'react';
import { StyleSheet, Text, View, Button, TextInput, Alert } from 'react-native';

export default function App() {
  const [isClockedIn, setIsClockedIn] = useState(false);
  const [taskDescription, setTaskDescription] = useState('');

  const handleClockIn = () => {
    // We'll add location and data-saving logic here later.
    setIsClockedIn(true);
    Alert.alert("Clocked In!", "You have successfully clocked in.");
  };

  const handleClockOut = () => {
    // We'll add data-saving logic here later.
    setIsClockedIn(false);
    setTaskDescription('');
    Alert.alert("Clocked Out!", "You have successfully clocked out.");
  };

  return (
    <View style={styles.container}>
      <Text style={styles.title}>Employee Clock-In</Text>
      <Text style={styles.statusText}>
        Status: {isClockedIn ? 'Clocked In' : 'Clocked Out'}
      </Text>

      {!isClockedIn && (
        <>
          <TextInput
            style={styles.input}
            placeholder="Describe your task here..."
            value={taskDescription}
            onChangeText={setTaskDescription}
            multiline
          />
          <Button
            title="Clock In"
            onPress={handleClockIn}
            disabled={!taskDescription} // Disable button if task is empty
          />
        </>
      )}

      {isClockedIn && (
        <Button
          title="Clock Out"
          onPress={handleClockOut}
        />
      )}
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
    padding: 20,
    backgroundColor: '#f5f5f5',
  },
  title: {
    fontSize: 24,
    fontWeight: 'bold',
    marginBottom: 20,
  },
  statusText: {
    fontSize: 18,
    marginBottom: 20,
    color: '#555',
  },
  input: {
    width: '100%',
    height: 80,
    borderColor: '#ccc',
    borderWidth: 1,
    borderRadius: 8,
    padding: 10,
    marginBottom: 20,
    textAlignVertical: 'top',
  },
});
