PATH_add tools/bin

export NIX_PATH=nixpkgs=`pwd`/nix

source_local() {
  file=./.envrc.local
  if [[ -f "$file" ]]; then
    source_env "$file"
  fi
  watch_file "$file"
}

source_secrets() {
  file=$1
  if [[ -f "$file" ]] && head -1 "$file" | grep --quiet "#!"; then
    source_env "$file"
  fi
  watch_file "$file"
}

source_secrets secrets/expotools.env
source_local
