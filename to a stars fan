import React, { useState, useEffect } from "react";
import { View, Text, TouchableOpacity, StyleSheet } from "react-native";

export default function App() {
  const [screen, setScreen] = useState("show"); // show ‚Üí menu ‚Üí arena
  const [player, setPlayer] = useState(null);

  // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –ø–µ—Ä–µ—Ö–æ–¥–∏–º –≤ –º–µ–Ω—é —á–µ—Ä–µ–∑ 4 —Å–µ–∫—É–Ω–¥—ã
  useEffect(() => {
    if (screen === "show") {
      const timer = setTimeout(() => setScreen("menu"), 4000);
      return () => clearTimeout(timer);
    }
  }, [screen]);

  // –≠–∫—Ä–∞–Ω –∞–Ω–æ–Ω—Å–∞ –Ω–æ–≤–æ–≥–æ –±–æ–π—Ü–∞
  if (screen === "show") {
    return (
      <View style={styles.show}>
        <Text style={styles.title}>‚≠ê To a Stars Fan ‚≠ê</Text>
        <Text style={styles.subtitle}>–ù–û–í–´–ô –ë–û–ï–¶!</Text>
        <View style={styles.heroCircle}>
          <Text style={{ fontSize: 28 }}>Inferno üî•</Text>
        </View>
        <Text style={styles.desc}>–û–≥–Ω–µ–Ω–Ω—ã–π —à–∞—Ä ‚Äî —É—Ä–æ–Ω –ø–æ –æ–±–ª–∞—Å—Ç–∏!</Text>
      </View>
    );
  }

  // –ú–µ–Ω—é –≤—ã–±–æ—Ä–∞ –±–æ–π—Ü–æ–≤
  if (screen === "menu") {
    return (
      <View style={styles.menu}>
        <Text style={styles.title}>–í—ã–±–µ—Ä–∏ –±–æ–π—Ü–∞</Text>
        {["StarGirl ‚≠ê", "Federico ü™µ", "Waspy üêù", "Nyx üåë", "Slime üíß", "Inferno üî•"].map(
          (b) => (
            <TouchableOpacity
              key={b}
              style={styles.button}
              onPress={() => {
                setPlayer(b);
                setScreen("arena");
              }}
            >
              <Text style={{ color: "white" }}>{b}</Text>
            </TouchableOpacity>
          )
        )}
      </View>
    );
  }

  // –ê—Ä–µ–Ω–∞
  if (screen === "arena") {
    return (
      <View style={styles.arena}>
        <Text style={styles.subtitle}>‚öîÔ∏è –ê—Ä–µ–Ω–∞</Text>
        <Text style={styles.desc}>–¢—ã –∏–≥—Ä–∞–µ—à—å –∑–∞: {player}</Text>
      </View>
    );
  }
}

const styles = StyleSheet.create({
  show: {
    flex: 1,
    backgroundColor: "#ff4d4d",
    alignItems: "center",
    justifyContent: "center",
  },
  menu: {
    flex: 1,
    backgroundColor: "#222",
    alignItems: "center",
    justifyContent: "center",
  },
  arena: {
    flex: 1,
    backgroundColor: "#0066cc",
    alignItems: "center",
    justifyContent: "center",
  },
  title: { fontSize: 32, fontWeight: "bold", color: "white", marginBottom: 20 },
  subtitle: { fontSize: 24, fontWeight: "bold", color: "white", marginBottom: 10 },
  desc: { fontSize: 18, color: "white", marginTop: 10 },
  heroCircle: {
    width: 160,
    height: 160,
    borderRadius: 80,
    backgroundColor: "orange",
    alignItems: "center",
    justifyContent: "center",
    margin: 20,
  },
  button: {
    backgroundColor: "#555",
    padding: 12,
    margin: 8,
    borderRadius: 10,
    width: 200,
    alignItems: "center",
  },
});
